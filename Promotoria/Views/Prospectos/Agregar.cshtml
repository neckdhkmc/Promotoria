
@using Promotoria.Models
@model ProspectoCLS
@{
    ViewBag.Title = "Agregar";

}

<div class="clearfix">
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Registrar Nuevo prospecto a ser cliente</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-lg-12">
                        @using (Html.BeginForm("Agregar", "Prospectos", FormMethod.Post, new { @id = "frmAgregar", enctype = "multipart/form-data" }))
                        {
                            <div class="col-lg-12">

                                <div class="col-lg-4">
                                    <i class="fa fa-male" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.Nombre)
                                    @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control" })
                                    @Html.ValidationMessage("Nombre", new { @class = "text-danger" })


                                </div>

                                <div class="col-lg-4">
                                    <i class="fa fa-male" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.PrimerApellido)
                                    @Html.TextBoxFor(p => p.PrimerApellido, new { @class = "form-control" })
                                    @Html.ValidationMessage("PrimerApellido", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-4">
                                    <i class="fa fa-male" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.SegundoApellido)
                                    @Html.TextBoxFor(p => p.SegundoApellido, new { @class = "form-control" })

                                </div>
                                <div>
                                    @Html.Hidden("nul2");

                                </div>

                                <div class="col-lg-4">
                                    <i class="fa fa-street-view" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.Calle)
                                    @Html.TextBoxFor(p => p.Calle, new { @class = "form-control" })
                                    @Html.ValidationMessage("Calle", new { @class = "text-danger" })

                                </div>
                                <div class="col-lg-2">
                                    <i class="fa fa-hashtag" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.Numero)
                                    @Html.TextBoxFor(p => p.Numero, new { @class = "form-control" })
                                    @Html.ValidationMessage("Numero", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-4">
                                    <i class="fa fa-street-view" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.Colonia)
                                    @Html.TextBoxFor(p => p.Colonia, new { @class = "form-control" })
                                    @Html.ValidationMessage("Colonia", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-2">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.CodigoPostal)
                                    @Html.TextBoxFor(p => p.CodigoPostal, new { @class = "form-control" })
                                    @Html.ValidationMessage("CodigoPostal", new { @class = "text-danger" })
                                </div>
                                <div>
                                    @Html.Hidden("nul2");

                                </div>
                                <div class="col-lg-6">
                                    <i class="fa fa-phone" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.Telefono)
                                    @Html.TextBoxFor(p => p.Telefono, new { @class = "form-control" })
                                    @Html.ValidationMessage("Telefono", new { @class = "text-danger" })
                                </div>
                                <div class="col-lg-6">
                                    <i class="fa fa-key" aria-hidden="true"></i>
                                    @Html.LabelFor(p => p.RFC)
                                    @Html.TextBoxFor(p => p.RFC, new { @class = "form-control" })
                                    @Html.ValidationMessage("RFC", new { @class = "text-danger" })
                                </div>
                                <div>
                                    @Html.Hidden("nul2");

                                </div>
                                <div class="col-lg-12">
                                    <i class="fa fa-file-text" aria-hidden="true"></i>
                                    @Html.Label("Agrega uno o varios documentos")


                                    <input id="File1" type="file" name="postedFile" class="form-control" accept="application/pdf" multiple />


                                    @*<input type="submit" id="btnUpload" value="Upload" />*@
                                </div>
                                <div>
                                    @Html.Hidden("nul2");
                                    @Html.HiddenFor(p => p.Observaciones, new { @Value = "-" })

                                </div>

                            </div>

                            <div class="col-lg-6">
                                <button type="button" class="btn btn-info btn-lg btn-block " data-toggle="modal" data-target="#exampleModal2">
                                    Enviar
                                </button>

                            </div>


                            <div class="col-lg-6">
                                @*@Html.ActionLink("Regresar", "Index", "PantallaPrincipal", null, new { @class = "btn btn-danger btn-lg btn-block" })*@
                                <button type="button" class="btn btn-danger btn-lg btn-block " data-toggle="modal" data-target="#exampleModal">
                                    Salir
                                </button>
                            </div>

                        }


                        <!-- Modal -->



                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Desea enviar los datos a evaluación?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-footer">

                <button onclick="location.href='@Url.Action("Index", "Home")';return false;" class="btn btn-info">Salir</button>
                <input type="submit" onclick="Agregar()" class="btn btn-primary" value="Aceptar" />
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">¿Desea salir del registro?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h6>Los datos del prospecto no se almacenarán</h6>


            </div>

            <div class="modal-footer">

                <button onclick="location.href='@Url.Action("PatallaInicial", "Prospectos")';return false;" class="btn btn-info">Aceptar</button>

            </div>
        </div>
    </div>
</div>

<script>
    function Agregar() {
        //var frmAgregar = document.getElementById("frmAgregar");
        //frmAgregar.submit();
        $('#exampleModal2').modal('hide');
        swal(
            {
                title: "",
                width: '800px',
                text: "¡Registrado Correctamente!",
                type: "success",
                confirmButtonText: "OK"
            }, function (isConfirm) {
                if (isConfirm) {
                    ejecutar()
                }
            });
        function ejecutar() {
            var frmSolicitud = document.getElementById("frmAgregar");

            frmSolicitud.submit();
            //location.reload();

        }
    }

</script>
