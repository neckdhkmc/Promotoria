@using Promotoria.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="images/favicon.ico" type="image/ico" />

    <title>Promotoria | </title>

    <!-- Bootstrap -->
    <link href="~/Content/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/vendors/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="~/Content/vendors/nprogress/nprogress.css" rel="stylesheet" />

    <!-- Custom Theme Style -->
    <link href="~/Content/css/custom.min.css" rel="stylesheet" />
    <link href="~/Content/vendors/dropzone/dist/min/dropzone.min.css" rel="stylesheet" />

    <!-- sweet alert -->
    <link href="~/Content/Sweetalert Scripts/Scripts/sweetalert.css" rel="stylesheet" />
    <link href="~/Content/paginador/DataTables-1.10.25/css/jquery.dataTables.min.css" rel="stylesheet" />
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
</head>

<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href="index.html" class="site_title"><i class="fa fa-group"></i> <span>TALPER</span></a>
                    </div>

                    <div class="clearfix"></div>

                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic">

                            <img src="~/Content/img/promotor.png" alt="..." class="img-circle profile_img" />
                        </div>
                        <div class="profile_info">
                            <span>Bienvenido,</span>
                            <h2>Promotor</h2>

                        </div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3>General</h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-home"></i> Inicio <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>
                                            @Html.ActionLink("Inicio", "Index", "Home")
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-user"></i> PROMOTORES  <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li> @Html.ActionLink("Registrar nuevo prospecto", "Agregar", "Prospectos")</li>
                                        <li> @Html.ActionLink("Consulta de prospecto", "Index", "Prospectos")</li>
                                    </ul>
                                </li>

                            </ul>
                        </div>


                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">

                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>

            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <div class="nav toggle">
                        <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                    </div>
                    <nav class="nav navbar-nav">
                        <ul class=" navbar-right">
                            <li class="nav-item dropdown open" style="padding-left: 15px;">
                                <a href="javascript:;" class="user-profile dropdown-toggle" aria-haspopup="true" id="navbarDropdown" data-toggle="dropdown" aria-expanded="false">

                                    <img src="~/Content/img/promotor.png" alt="" />Promotor
                                </a>
                                <div class="dropdown-menu dropdown-usermenu pull-right" aria-labelledby="navbarDropdown">

                                    @Html.ActionLink("Salir", "Index", "Home", null, new { @class = "dropdown-item fa fa-sign-out pull-right" })


                                </div>
                            </li>

                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                @RenderBody();
            </div>

            <!-- /page content -->
            <!-- footer content -->
            <footer>
                <div class="pull-right">
                    Sistema para el seguimiento de prospectos
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/Content/vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->

    <script src="~/Content/vendors/bootstrap/dist/js/bootstrap.bundle.js"></script>

    <!-- NProgress -->

    <script src="~/Content/vendors/nprogress/nprogress.js"></script>

    <!-- Custom Theme Scripts -->

    <script src="~/Content/js/custom.min.js"></script>
    <script src="~/Content/Sweetalert Scripts/Scripts/sweetalert.min.js"></script>
    <script src="~/Content/Scripts/jquery.unobtrusive-ajax.js"></script>
    @*<script src="~/Content/data tabgle para paginacion/DataTables-1.10.24/js/jquery.dataTables.min.js"></script>*@
    <script src="~/Content/paginador/DataTables-1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/data tabgle para paginacion/DataTables-1.10.24/js/jquery.dataTables.js"></script>
    <script src="~/Content/Scripts/jquery.validate.min.js"></script>
    <script src="~/Content/Scripts/jquery.validate.unobtrusive.min.js"></script>



    @RenderSection("Scripts", required: false)

</body>
</html>

