@using Promotoria.Models
@model List<ProspectoCLS>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="clearfix">
    <div class="row">
        <div class="col-md-12 col-sm-12 ">

            <div class="x_panel">
                <div class="x_title">
                    <h2>Informacion del prospecto</h2>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-hover table-bordered" id="tabla">
                        <thead>
                            <tr>

                                <td style="text-align:center">@Html.LabelFor(p => Model[0].Nombre)</td>
                                <td style="text-align:center">@Html.LabelFor(p => Model[0].PrimerApellido)</td>
                                <td style="text-align:center">@Html.LabelFor(p => Model[0].SegundoApellido)</td>
                                <td style="text-align:center">@Html.LabelFor(p => Model[0].nomEstado)</td>
                                <td style="text-align:center">Observaciones</td>
                                <td style="text-align:center">Ver Informacion completa</td>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Nombre</td>
                                    <td>@item.PrimerApellido</td>
                                    <td>@item.SegundoApellido</td>



                                    @if (item.nomEstado == "Enviado")
                                    {

                                        <td class="bg-info" align="center" style="font-size:120%; color:#ffffff">@item.nomEstado</td>
                                        <td>@item.Observaciones</td>
                                    }
                                    else if (item.nomEstado == "Autorizado")
                                    {

                                        <td class="bg-success" align="center" style="font-size:120%; color:#ffffff">@item.nomEstado</td>
                                        <td>@item.Observaciones</td>
                                    }
                                    else if (item.nomEstado == "Rechazado")
                                    {

                                        <td class="bg-danger" align="center" style="font-size:120%; color:#ffffff">@item.nomEstado</td>
                                        <td>@item.Observaciones</td>
                                    }

                                    <td style="text-align:center">

                                        @*@Html.ActionLink(" ", "ProspectoRechazado", "Evaluacion", new { id = item.idProspecto }, new { @class = "fa fa-trash btn btn-danger" })

                                            @Html.ActionLink(" ", "ProspectoAceptado", "Evaluacion", new { id = item.idProspecto }, new { @class = "fa fa-check btn btn-success" })*@

                                        @Html.ActionLink(" ", "VistaDatosCompletos", "Prospectos", new { id = item.idProspecto }, new { @class = "fa fa-eye btn btn-primary " })

                                    </td>



                                </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#tabla").DataTable

        })

    </script>

}
