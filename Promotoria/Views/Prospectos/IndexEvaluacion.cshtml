@using Promotoria.Models
@model List<ProspectoCLS>
@{
    ViewBag.Title = "IndexEvaluacion";
}

<div class="clearfix">
    <div class="row">
        <div class="col-md-12 col-sm-12 ">

            <div class="x_panel">
                <div class="x_title">
                    <h2>Evaluacion de Prospectos a clientes</h2>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table class="table table-hover table-bordered" id="tabla">
                        <thead>
                            <tr>

                                <td>@Html.LabelFor(p => Model[0].Nombre)</td>
                                <td>@Html.LabelFor(p => Model[0].PrimerApellido)</td>
                                <td>@Html.LabelFor(p => Model[0].SegundoApellido)</td>
                                <td>@Html.LabelFor(p => Model[0].Calle)</td>
                                <td>@Html.LabelFor(p => Model[0].Numero)</td>
                                <td>@Html.LabelFor(p => Model[0].Colonia)</td>
                                <td>@Html.LabelFor(p => Model[0].CodigoPostal)</td>
                                <td>@Html.LabelFor(p => Model[0].Telefono)</td>
                                <td>@Html.LabelFor(p => Model[0].RFC)</td>
                                <td>@Html.LabelFor(p => Model[0].nomEstado)</td>
                                <td>Operaciones</td>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>@item.Nombre</td>
                                <td>@item.PrimerApellido</td>
                                <td>@item.SegundoApellido</td>
                                <td>@item.Calle</td>
                                <td>@item.Numero</td>
                                <td>@item.Colonia</td>
                                <td>@item.CodigoPostal</td>
                                <td>@item.Telefono</td>
                                <td>@item.RFC</td>


                                @if (item.nomEstado == "Enviado")
                                {
                                    <td class="bg-info" align="center" style="font-size:120%; color:#ffffff">@item.nomEstado</td>
                                }
                                else if (item.nomEstado == "Autorizado")
                                {
                                    <td class="bg-success" align="center" style="font-size:120%; color:#ffffff">@item.nomEstado</td>
                                }
                                else if (item.nomEstado == "Rechazado")
                                {
                                    <td class="bg-danger" align="center" style="font-size:120%; color:#ffffff">@item.nomEstado</td>
                                }

                            <td>
                                <button type="button" class="fa fa-trash btn btn-danger" >
                                </button>

                            </td>



                            </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
